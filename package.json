{
  "name": "metronome-validator",
  "version": "3.0.0",
  "description": "Metronome off chain validators",
  "main": "index.js",
  "preferGlobal": true,
  "bin": {
    "metronome-validator": "index.js"
  },
  "scripts": {
    "postinstall": "patch-package",
    "docker:build": "docker build -t metronome-validator .",
    "docker-compose:up": " docker-compose -f docker-compose.dev.yml up --force-recreate",
    "test": "npm run testQtumImport && npm run testQtumExport && exit 1",
    "testAC": "./node_modules/.bin/mocha ./test/ac.js --timeout 1000000 && exit",
    "transfer": "./node_modules/.bin/mocha ./test/transfer.js --timeout 1000000 && exit",
    "testAuction": "./node_modules/.bin/mocha ./test/auctions.js --timeout 1000000 && exit",
    "eth-etc-hop": "./node_modules/.bin/mocha ./test/eth-etc-hop.js --timeout 1000000 && exit",
    "eth-to-qtum": "./node_modules/.bin/mocha ./test/eth-to-qtum.js --timeout 1000000 --exit",
    "etc-to-qtum": "./node_modules/.bin/mocha ./test/etc-to-qtum.js --timeout 1000000 --exit",
    "qtum-to-eth": "./node_modules/.bin/mocha ./test/qtum-to-eth.js --timeout 1000000 --exit",
    "qtum-to-etc": "./node_modules/.bin/mocha ./test/qtum-to-etc.js --timeout 1000000 --exit"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "5.1.0",
    "bn.js": "^4.11.8",
    "patch-package": "^5.1.1"
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "camelcase": "^5.0.0",
    "commander": "^2.11.0",
    "config": "^2.0.1",
    "cron": "^1.4.1",
    "dotenv": "^6.2.0",
    "ethers": "^4.0.7",
    "ethjs-abi": "^0.2.1",
    "lerna": "^3.8.5",
    "lodash": "^4.17.10",
    "merkletreejs": "0.0.9",
    "metronome-contracts": "2.4.0",
    "newrelic": "^4.9.0",
    "qtumjs": "^1.9.1",
    "qweb3": "^1.2.2",
    "redis": "^2.8.0",
    "truffle-hdwallet-provider": "^1.0.4",
    "typedarray-to-buffer": "^3.1.5",
    "web3": "1.0.0-beta.37",
    "websocket-reconnector": "^1.1.1",
    "winston": "^3.1.0",
    "winston-papertrail": "^1.0.5",
    "yaeti": "^1.0.2"
  }
}
